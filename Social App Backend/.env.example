# Example environment variables for Social App Backend
# Copy to .env and fill in real values before deploying

# MongoDB connection string (use a managed MongoDB like MongoDB Atlas)
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/social-media?retryWrites=true&w=majority

# Session secret for express-session
SESSION_SECRET=supersecretvalue

# The frontend origin URL (used for CORS and socket.io)
FRONTEND_URL=http://localhost:5173

# Node environment
NODE_ENV=production
